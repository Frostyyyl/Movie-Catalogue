@model GrobelnyKasprzak.MovieCatalogue.Interfaces.IDirector

@{
    ViewData["Title"] = @Model.Name;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Warning!</strong> @Html.ValidationMessage("DeleteError")
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mt-2 p-2 text-center">
    <h2 class="text-center">Confirm Deletion</h2>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="text-center">
            <div class="my-5">
                Are you sure you want to delete <span class="fw-bold">@Model.Name</span>?
            </div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>