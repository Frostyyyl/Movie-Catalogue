@model GrobelnyKasprzak.MovieCatalogue.MVC.ViewModels.DirectorViewModel

@{
    ViewData["Title"] = @Model.Name;
}

<div class="mt-2 p-2">

    <div class="mb-4 px-1 d-flex justify-content-between align-items-center text-center">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary">Delete</a>
        </div>
    </div>

    <hr />

    <dl class="row px-1">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movies)
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Movies.Select(m => m.Title))
        </dd>
    </dl>
</div>
